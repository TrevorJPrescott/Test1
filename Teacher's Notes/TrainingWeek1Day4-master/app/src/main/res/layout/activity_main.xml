<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etPhoneNumber"
        android:inputType="text"
        android:hint="@string/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDisplayPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnDisplayPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="@string/display_to_phone_display"/>

    <Button
        android:id="@+id/btnGotoRelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="GOTO Rel Layout"/>

    <Button
        android:id="@+id/btnGotoConstantLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="GOTO Constrant Layout"/>
    <!--  -->

    <ImageView
        android:id="@+id/ivImageToDisplay"
        android:layout_width="200dp"
        android:layout_height="200dp" />

</LinearLayout>
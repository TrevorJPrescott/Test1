<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

  <EditText
      android:id="@+id/etPhonenumber"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"

      android:hint="@string/phone_number"
      android:inputType="text"/>

  <TextView
        android:id="@+id/tvDisplayPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

  <Button
        android:id="@+id/btnDisplayPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="@string/display_to_phone_display"/>

    <Button
        android:id="@+id/btnGotoRealLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="GOTO Real Layout"/>
    <Button
        android:id="@+id/btnGotoRevLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="GOTO Rev Layout"/>

    <ImageView
        android:id="@+id/IvCool"
        android:layout_width="400dp"
        android:layout_height="200dp"/>
     <!--   android:src="@drawable/cool"-->


</LinearLayout>
